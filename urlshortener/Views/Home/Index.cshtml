@using urlshortener.Models
@model ShortnerViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "URL Shortener";
}

@using (Html.BeginForm("URLForm", "Home", FormMethod.Post)) 
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal"></div>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group" style="padding-left: 15px">
            @Html.LabelFor(m => m.SingleURL.LongURL, "Enter URL:")
            <div class="input-group">
                <span class="input-group-addon">></span>
                @Html.EditorFor(model => model.SingleURL.LongURL, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.SingleURL.LongURL, "", new { @class = "text-danger" })
                <input type="submit" value="Shorten URL" class="btn btn-primary" />
            </div>
        </div>
}

@Html.Action("GetList", "Home")